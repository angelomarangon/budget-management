@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<div class="card login-card">
    <div class="card-body">
        <h1 class="login-card-title">Iniciar sesión</h1>

        <form asp-action="Login">

            <div class="mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input id="recuerdame" asp-for="Recuerdame" class="form-check-input" />
                <label asp-for="Recuerdame" class="form-check-label"></label>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            

            <div class="d-grid">
                <button class="btn btn-primary w-100">Login</button>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Registro" class="auth-link">¿No tienes cuenta?</a>
            </div>

            <div class="text-center mt-2">
                <a asp-action="OlvideMiPassword" class="auth-link">¿Olvidaste tu contraseña?</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
