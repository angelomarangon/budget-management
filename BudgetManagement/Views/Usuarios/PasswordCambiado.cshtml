@{
    ViewData["Title"] = "Contraseña actualizada";
}

<div class="card login-card text-center">
    <div class="card-body">

        <div class="px-4 py-3 rounded-4 shadow-sm mb-4 mt-xxl-5"
             style="background-color: #ede9fe; border: 1px solid #c4b5fd; color: #5b21b6;">

            <h5 class="mb-2 fw-semibold" style="color: #7c3aed;">
                <i class="bi bi-shield-lock-fill me-2"></i> Contraseña actualizada
            </h5>

            <p class="mb-0" style="font-size: 0.95rem;">
                Tu nueva contraseña ha sido registrada con éxito.<br />
                Ahora puedes iniciar sesión con tus credenciales.
            </p>
        </div>

        <div class="text-center mt-xxl-5">
            <a asp-action="Login" class="login-card-link">← Volver al inicio de sesión</a>
        </div>
    </div>
</div>