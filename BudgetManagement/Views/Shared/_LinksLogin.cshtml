@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SignInManager


<div class="nav-user-group">
    @if (SignInManager.IsSignedIn(User))
    {
        <span class="user-text mb-0">Hola, @User.Identity.Name</span>
        <form asp-action="logout" asp-controller="usuarios" class="d-inline">
            <button type="submit" class="logout-btn">Logout</button>
        </form>
    }
    else
    {
        <a class="nav-link text-white" asp-controller="usuarios" asp-action="Registro">Registro</a>
        <a class="nav-link text-white" asp-controller="usuarios" asp-action="Login">Login</a>
    }
</div>